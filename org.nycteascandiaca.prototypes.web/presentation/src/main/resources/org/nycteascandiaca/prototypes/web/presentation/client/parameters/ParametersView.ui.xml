<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:gwt="urn:import:com.google.gwt.user.client.ui"
             xmlns:cv="urn:import:com.google.gwt.user.cellview.client">

	<gwt:DockLayoutPanel height="100%" width="100%">
		<gwt:north size="60">
			<gwt:HorizontalPanel width="100%" height="50" styleName="parameters-header">
				<gwt:Label styleName="parameters-model-name-label">Model:</gwt:Label>
				<gwt:Label ui:field="modelNameLabel" styleName="parameters-model-name-label"/>
			</gwt:HorizontalPanel>
		</gwt:north>
		<gwt:center>
			<gwt:HorizontalPanel width="100%" height="100%" spacing="10">
				<cv:DataGrid ui:field="dataGrid" width="100%" height="100%"/>
			</gwt:HorizontalPanel>
		</gwt:center>
		<gwt:south size="60">
			<gwt:HorizontalPanel width="100%" styleName="parameters-footer">
				<gwt:Cell horizontalAlignment="ALIGN_LEFT">
					<gwt:HorizontalPanel spacing="10">
						<gwt:PushButton ui:field="removeAllButton" height="25px" width="125px" styleName="default-button">Remove All</gwt:PushButton>
						<gwt:PushButton ui:field="generateButton" height="25px" width="125px" styleName="default-button">Generate</gwt:PushButton>
					</gwt:HorizontalPanel>
				</gwt:Cell>
				<gwt:Cell horizontalAlignment="ALIGN_RIGHT">
					<gwt:HorizontalPanel spacing="10">
						<gwt:PushButton ui:field="createNewButton" height="25px" width="125px" styleName="default-button">Create New...</gwt:PushButton>
					</gwt:HorizontalPanel>
				</gwt:Cell>
			</gwt:HorizontalPanel>
		</gwt:south>
	</gwt:DockLayoutPanel> 

</ui:UiBinder>