<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
        xmlns:gwt="urn:import:com.google.gwt.user.client.ui">
        
	<gwt:HorizontalPanel width="100%">	
    	<gwt:Cell horizontalAlignment="ALIGN_CENTER" verticalAlignment="ALIGN_MIDDLE">
			<gwt:VerticalPanel width="350px">
				<gwt:Cell verticalAlignment="ALIGN_TOP" height="50px">
		    		<gwt:VerticalPanel/>
	    		</gwt:Cell>
				<!-- Header -->
				<gwt:Cell>
					<gwt:VerticalPanel spacing="10" styleName="model-header">
						<gwt:Label styleName="model-title">Model</gwt:Label>
						<gwt:Label styleName="model-title-description">Please enter model name.</gwt:Label>
					</gwt:VerticalPanel>
				</gwt:Cell>
				<!-- Content -->
				<gwt:Cell>
					<gwt:VerticalPanel width="100%" spacing="10">
						<gwt:Label width="100%" height="auto">Model name:</gwt:Label>
						<gwt:TextBox ui:field="modelNameTextBox" width="100%" height="auto" />
						<gwt:Button ui:field="applyButton" styleName="model-apply-button">Apply</gwt:Button>
					</gwt:VerticalPanel>
			    </gwt:Cell>
			</gwt:VerticalPanel>
		</gwt:Cell>
    </gwt:HorizontalPanel>   
        
</ui:UiBinder>